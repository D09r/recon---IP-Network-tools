{
	"update_url": "https://clients2.google.com/service/update2/crx",
	"manifest_version": 2,
	"name": "recon - IP, Network & Malware tools",
	"description": "Recon extension for Chrome is a collection of an IP, Network & Malware tools used to get information about IP, WebSites & DNS",
	"version": "0.0.6",	
	"short_name": "recon",
    "author": "D09r",
    "homepage_url": "https://chrome.google.com/webstore/search/d09r?_category=extensions",
	"icons": {
		"16": "img/r3_16.png",
        "32": "img/r3_32.png",
		"64": "img/r3_64.png",
        "128": "img/r3_128.png"
	},
  	"permissions": [
		"tabs",
		"background",
        "<all_urls>"
  	],
	"background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "options_page": "recon.html",
	"browser_action": {
        "default_icon": "img/r3_16.png",
        "default_title": "recon - IP, Network & Malware tools"
    }
}